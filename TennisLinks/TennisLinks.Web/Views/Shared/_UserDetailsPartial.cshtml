@using Microsoft.AspNet.Identity
@using TennisLinks.Web.Models.Home

@model UserSearchResultViewModel

<div class="player-details-wrapper grid-item">
    <div class="player-details">
        <img src="@Model.ImageUrl" alt="Player" />
        <h2 class="main-greeting">@Model.UserName</h2>
        @if (Model.Favorite)
        {
            <span id="star-@Model.UserName" class="glyphicon glyphicon-star" aria-hidden="true"></span>
        }
        <table class="table">
            <tr>
                <th scope="row">gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th scope="row">age</th>
                <td>@Model.Age</td>
            </tr>
            <tr>
                <th scope="row">from</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th scope="row">skills</th>
                <td>@Model.Skill</td>
            </tr>
            <tr>
                <th scope="row">club</th>
                <td>@Model.Club</td>
            </tr>
            <tr>
                <th scope="row">time</th>
                <td>@Model.PlayTime</td>
            </tr>
            <tr>
                <th scope="row">info</th>
                @if (Model.Info.Length > 70)
                {
                    <td>@Model.Info.Substring(0, 70)...</td>
                }
                else
                {
                <td>@Model.Info</td>
                }
            </tr>
        </table>
        <div class="button-group">
            <a href="/messages/write?recipient=@Model.UserName" current="@User.Identity.GetUserName()" id="msg-@Model.UserName" class="write-message btn btn-sm btn-warning">MESSAGE</a>

            @if (!Model.Favorite)
            {
                <a href="/favorites/add?username=@Model.UserName" id="add-@Model.UserName" class="btn btn-sm btn-success">FAVOURITE</a>
            }
            else
            {
                <a href="/favorites/remove?username=@Model.UserName" id="rem-@Model.UserName" class="btn btn-sm btn-default">UNFAVOUR</a>
            }
            <a class="btn btn btn-sm btn-info" href="/player/details?username=@Model.UserName">DETAILS</a>
        </div>
    </div>
</div>