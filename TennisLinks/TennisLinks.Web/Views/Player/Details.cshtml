@using TennisLinks.Web.Models.Player
@model DetailsViewModel

@{
    ViewBag.Title = Model.UserName + " user details";
}

<h2>@ViewBag.Title</h2>

<h4>Review your user details</h4> 
<h4>Click update button to change your account settings</h4>

<hr />
<div>
    <table class="user-details-table table-striped">
        <tr>
            <th scope="row">Username:</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th scope="row">E-mail:</th>
            <td> @Model.Email</td>
        </tr>
        <tr>
            <th scope="row">Age:</th>
            <td>@{ var age = Model.Age != null ? Model.Age.ToString() : "No age specified.";} @age</td>
        </tr>
        <tr>
            <th scope="row">Gender:</th>
            <td>@{ var gender = Model.Gender != null ? Model.Gender : "No gender specified.";} @gender</td>
        </tr>
        <tr>
            <th scope="row">Skill level:</th>
            <td>@Model.SkillLevel</td>
        </tr>
        <tr>
            <th scope="row">City:</th>
            <td>@{ var city = Model.City != null ? Model.City : "No city provided";} @city</td>
        </tr>
        <tr>
            <th scope="row">Clubs:</th>
            <td>@{ var clubs = Model.Clubs != null ? string.Join(", ", Model.Clubs) : "You have no favorite clubs."; } @clubs</td>
        </tr>
        <tr>
            <th scope="row">Available for play:</th>
            <td>
                @{var times = Model.PlayTimes != null ? string.Join(", ", @Model.PlayTimes) : "You have no favorite clubs.";} @times
            </td>
        </tr>
        <tr>
            <th scope="row">Favorite players:</th>
            <td>
                @{var players = Model.Favorites != null ? string.Join(", ", @Model.Favorites) : "You have no favorite players.";} @players
            </td>
        </tr>
        <tr>
            <th scope="row">Personal info:</th>
            <td> @Model.Info</td>
        </tr>
    </table>

    <a href="/player/updatedetails" class="btn btn-sm btn-primary">UPDATE YOUR INFO HERE</a>
</div>