@using TennisLinks.Web.Models.Messages
@model IEnumerable<MessageViewModel>

@{
    ViewBag.Title = "Inbox";
}
<h2>@ViewBag.Title</h2>

<h4>Browse all your received messages</h4>

<hr />
@if (Model.Count() > 0)
{
    <div class="message-box row">
        @foreach (var msg in Model)
        {
            @Html.Partial("_ReceivedMessagePartial", msg);
        }
    </div>
}
else
{
    <h4>Sorry, you did not receive any messages!</h4>
}