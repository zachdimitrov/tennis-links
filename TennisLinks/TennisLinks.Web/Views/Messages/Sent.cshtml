@using TennisLinks.Web.Models.Messages
@model IEnumerable<MessageViewModel>

@{
    ViewBag.Title = "Outbox";
}
<h2>@ViewBag.Title</h2>

<h4>Browse all messages you sent</h4>
<hr />
@if (Model.Count() > 0)
{
<div class="message-box row">
    @foreach (var msg in Model)
    {
        @Html.Partial("_SentMessagePartial", msg);
    }
</div>
}
else
{
<h4>Sorry, you did not send any messages!</h4>
}